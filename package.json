{
  "name": "qi-credit",
  "version": "1.0.0",
  "description": "QI Credit - P2P Lending Platform with Blockchain Integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "blockchain"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:check": "cd frontend && npm run lint:check",
    "type-check": "cd frontend && npm run type-check",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "clean": "npm run clean:frontend",
    "clean:frontend": "cd frontend && npm run clean",
    "install:all": "npm install && cd frontend && npm install",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm run install:all",
    "postinstall": "echo 'âœ… QI Credit - Dependencies installed successfully!'",
    "help": "echo 'Available commands:\\n  npm start - Start development server\\n  npm run build - Build for production\\n  npm run lint - Run linting\\n  npm run setup - Install all dependencies'"
  },
  "keywords": [
    "p2p",
    "lending",
    "blockchain",
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "shadcn",
    "radix-ui"
  ],
  "author": "QI Credit Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leeunam/QI-Credit.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
